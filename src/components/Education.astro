---
import type { Education } from '../data/cv';

interface Props {
  education: Education[];
}

const { education } = Astro.props;
---

<section class="py-12 border-t border-zinc-100 dark:border-zinc-800 mt-12 print:py-4 print:mt-4 print:border-gray-200">
  <h2 class="text-2xl font-bold font-heading mb-8 text-zinc-900 dark:text-zinc-100 print:mb-4 print:text-xl">Education</h2>
  
  <div class="space-y-8 print:space-y-4">
    {education.map((edu) => (
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline gap-1 sm:gap-4">
        <div>
          <h3 class="font-semibold text-zinc-900 dark:text-zinc-100">{edu.school}</h3>
          <p class="text-zinc-600 dark:text-zinc-400 mt-0.5">{edu.degree}</p>
        </div>
        <div class="text-sm text-zinc-500 whitespace-nowrap flex flex-col items-end">
          <span>From {edu.startDate}</span>
          <span>until {edu.endDate}</span>
        </div>
      </div>
    ))}
  </div>
</section>
