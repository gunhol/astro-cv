---
import type { Education } from '../data/cv';

interface Props {
  education: Education[];
}

const { education } = Astro.props;
---

<section class="py-12 border-t border-zinc-100 dark:border-zinc-800 mt-12">
  <h2 class="text-2xl font-bold font-heading mb-8 text-zinc-900 dark:text-zinc-100">Education</h2>
  
  <div class="space-y-8">
    {education.map((edu) => (
      <div class="flex flex-col sm:flex-row sm:justify-between sm:items-baseline gap-1 sm:gap-4">
        <div>
          <h3 class="font-semibold text-zinc-900 dark:text-zinc-100">{edu.school}</h3>
          <p class="text-zinc-600 dark:text-zinc-400 mt-0.5">{edu.degree}</p>
        </div>
        <div class="text-sm text-zinc-500 font-mono whitespace-nowrap">
          {edu.startDate} â€” {edu.endDate}
        </div>
      </div>
    ))}
  </div>
</section>
